<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Admin Settings | MediConnect</title>
  <style>
    /* ===== Global Styles ===== */
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      font-family: "Poppins", sans-serif;
    }

    body {
      display: flex;
      min-height: 100vh;
      background: url("/images/background.jpeg") no-repeat center center;
      background-size: cover;
      color: #333;
      width: calc(100% - 270px);
      background-attachment: fixed;
      overflow-x: hidden;
    }

    /* ===== Sidebar ===== */
    .sidebar {
      width: 230px;
      background: linear-gradient(135deg, #007bff, #004e9a);
      color: white;
      padding: 25px 0;
      display: flex;
      flex-direction: column;
      align-items: center;
    }

    .sidebar h2 {
      font-size: 1.5rem;
      margin-bottom: 30px;
    }

    .sidebar ul {
      list-style: none;
      width: 100%;
    }

    .sidebar ul li {
      width: 100%;
    }

    .sidebar ul li a {
      color: white;
      text-decoration: none;
      display: block;
      padding: 12px 25px;
      transition: background 0.3s;
    }

    .sidebar ul li a:hover,
    .sidebar ul li.active a {
      background: rgba(255, 255, 255, 0.2);
    }

    /* ===== Main Content ===== */
    .main-content {
      flex: 1;
      padding: 30px;
    }

    header {
      margin-bottom: 25px;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    header h1 {
      color: #007bff;
      font-size: 1.8rem;
    }

    .settings-section{
      background: rgba(0, 0, 0, 0.2);
      padding: 25px;
      color:black;
      border-radius: 12px;
      box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
      margin-bottom: 30px;
    }

    .settings-section h2{
      color: #007bff;
      font-size: 1.3rem;
      margin-bottom: 20px;
      border-bottom: 2px solid #007bff;
      display: inline-block;
      padding-bottom: 5px;
    }

    .form-group {
      margin-bottom: 15px;
    }

    .form-group label {
      display: block;
      font-weight: 500;
      margin-bottom: 5px;
    }

    .form-group input {
      background: rgba(0, 0, 0, 0.1);
      width: 100%;
      padding: 10px 12px;
      border: 1.5px solid #ccc;
      border-radius: 8px;
      transition: 0.3s;
      color: black;
    }

    .form-group input:focus {
      border-color: #007bff;
      box-shadow: 0 0 5px rgba(0, 123, 255, 0.4);
      outline: none;
    }

    .form-group input:hover {
      border-color: #007bff;
      box-shadow: 0 0 5px rgba(0, 123, 255, 0.4);
      transform: scale(1.05);
      outline: none;
    }

    .btn-primary {
      background: linear-gradient(135deg, #007bff, #0056b3);
      color: white;
      border: none;
      padding: 10px 18px;
      border-radius: 8px;
      font-weight: 600;
      cursor: pointer;
      transition: 0.3s;
    }

    .btn-primary:hover {
      transform: scale(1.05);
      background: linear-gradient(135deg, #0056b3, #007bff);
    }

    .btn-secondary {
      background: #ccc;
      color:black;
      border: none;
      padding: 10px 18px;
      border-radius: 8px;
      font-weight: 600;
      cursor: pointer;
      transition: 0.3s;
    }

    .btn-secondary:hover {
      background: #bbb;
      transform: scale(1.03);
    }

    .btn-group {
      margin-top: 10px;
      display: flex;
      gap: 10px;
    }

    @media (max-width: 768px) {
      .sidebar {
        width: 200px;
      }

      header h1 {
        font-size: 1.4rem;
      }

      .settings-section {
        padding: 20px;
      }
    }
  </style>
</head>

<body>
  <div class="sidebar">
    <h2>MediConnect</h2>
    <ul>
      <li><a href="/user/admin">Dashboard</a></li>
      <li><a href="/user/admin-manage-api">Patients</a></li>
      <li><a href="/user/admin-messages">Messages</a></li>
      <li class="active"><a href="/user/admin-setting">Settings</a></li>
      <li><a href="/user/admin-login">Logout</a></li>
    </ul>
  </div>

  <div class="main-content">
    <header>
      <h1>Admin Settings</h1>
    </header>

    <!-- Profile Information -->
    <div class="settings-section">
      <h2>Profile Information</h2>
      <form action="/user/profilechanges" method="post">
      <div class="form-group">
        <label>Full Name</label>
        <input type="text" name="new_name" placeholder="Enter new full name" />
      </div>
      <div class="form-group">
        <label>Email</label>
        <input type="email" name='new_email' placeholder="Enter new email" />
      </div>
      <div class="form-group">
        <label>Phone</label>
        <input type="text" name="new_phone" placeholder="Enter new phone number"  />
      </div>
      <div class="btn-group">
        <button class="btn-primary">Save Changes</button>
        <button class="btn-secondary">Cancel</button>
      </div>
      </form>
    </div>

    <!-- Change Password -->
    <div class="settings-section">
      <h2>Change Password</h2>
      <form action="/user/passwordchanges" method="post">
      <div class="form-group">
        <label>Current Password</label>
        <input type="password" name="current" placeholder="Enter current password" />
      </div>
      <div class="form-group">
        <label>New Password</label>
        <input type="password" name="new_p" placeholder="Enter new password" />
      </div>
      <div class="form-group">
        <label>Confirm Password</label>
        <input type="password" name="confirm" placeholder="Confirm new password" />
      </div>
      <div class="btn-group">
        <button class="btn-primary">Update Password</button>
      </div>
      </form>
    </div>

    <!-- Add New Admin -->
    <div class="settings-section">
      <h2>Add New Admin</h2>
      <form action="/user/new-admin" method="post">
      <div class="form-group">
        <label>Full Name</label>
        <input type="text" name="ad_name" placeholder="Enter admin full name" />
      </div>
      <div class="form-group">
        <label>Email</label>
        <input type="email" name="ad_email" placeholder="Enter admin email" />
      </div>
      <div class="form-group">
        <label>Phone</label>
        <input type="text" name="ad_phone" pattern="[0-9]{11}" maxlength="11" placeholder="Enter phone number" />
      </div>
      <div class="form-group">
        <label>Set Password</label>
        <input type="password" name='ad_pass' placeholder="Enter password" />
      </div>
      <div class="btn-group">
        <button class="btn-primary">Add Admin</button>
        <button class="btn-secondary">Reset</button>
      </div>
    </div>
  </form>
  </div>
</body>
</html>
