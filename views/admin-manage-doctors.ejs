<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Manage Doctors | MediConnect</title>

  <style>
    /* ===== GLOBAL STYLES ===== */
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      font-family: "Poppins", sans-serif;
     
    }

    body {
      display: flex;
      min-height: 100vh;
      background: #f4f7fb;
      color: #333;
       min-height: 100vh;
      background: url("/images/background.jpeg") 
        no-repeat center center/cover;
      overflow-x: hidden;
    }

    /* ===== SIDEBAR ===== */
    .sidebar {
      width: 250px;
      background: linear-gradient(135deg, #007bff);
      color: #fff;
      display: flex;
      flex-direction: column;
      align-items: center;
      padding: 25px 0;
      box-shadow: 4px 0 12px rgba(0, 0, 0, 0.1);
      border-top-right-radius: 20px;
      border-bottom-right-radius: 20px;
    }

    .sidebar h2 {
      font-size: 1.6rem;
      margin-bottom: 40px;
      letter-spacing: 1px;
    }

    .sidebar ul {
      list-style: none;
      width: 100%;
    }

    .sidebar ul li {
      width: 100%;
    }

    .sidebar ul li a {
      display: block;
      text-decoration: none;
      color: #fff;
      padding: 14px 25px;
      font-size: 1rem;
      transition: 0.3s;
      border-left: 4px solid transparent;
    }

    .sidebar ul li a:hover,
    .sidebar ul li.active a {
      background: rgba(255, 255, 255, 0.15);
      border-left: 4px solid #fff;
      font-weight: 600;
    }

    /* ===== MAIN CONTENT ===== */
    .main-content {
      flex: 1;
      padding: 30px;
      animation: fadeIn 1.2s ease-in-out;
      
    }

    @keyframes fadeIn {
      from { opacity: 0; transform: translateY(10px); }
      to { opacity: 1; transform: translateY(0); }
    }

    header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 25px;
      border-bottom: 2px solid #e2e8f0;
      padding-bottom: 10px;
    }

    header h1 {
      font-size: 1.8rem;
      color: #0056b3;
    }

    .btn-primary {
      background: linear-gradient(135deg, #007bff, #0056b3);
      color: white;
      padding: 10px 18px;
      border: none;
      border-radius: 8px;
      cursor: pointer;
      font-size: 15px;
      transition: 0.3s;
    }
    .btn-primary a{
      text-decoration: none;
      color: white;
    }
    .btn-primary:hover {
      background: linear-gradient(135deg, #0056b3, #007bff);
      transform: scale(1.05);
    }

    /* ===== TABLE ===== */
    .styled-table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 20px;
      font-size: 15px;
      background: rgba(0, 0, 0, 0.1);
      box-shadow: 0 6px 20px rgba(0, 0, 0, 0.1);
      border-radius: 10px;
      overflow: hidden;
    }

    .styled-table thead tr {
      background: linear-gradient(135deg, #007bff, #0056b3);
      color: #fff;
      text-align: left;
    }

    .styled-table th,
    .styled-table td {
      padding: 14px 16px;
    }

    .styled-table tbody tr {
      border-bottom: 1px solid #ddd;
      background-color: #fff;
      transition: background-color 0.3s ease;
    }

    .styled-table tbody tr:hover {
      background-color: #f1f5ff;
    }

    /* ===== ACTION BUTTONS ===== */
    .btn-edit, .btn-delete {
      border: none;
      padding: 7px 14px;
      border-radius: 6px;
      font-size: 14px;
      cursor: pointer;
      transition: 0.3s;
    }

    .btn-edit {
      background-color: #00b894;
      color: white;
    }

    .btn-edit:hover {
      background-color: #019874;
    }

    .btn-delete {
      background-color: #e74c3c;
      color: white;
      margin-left: 8px;
    }
button a{
  text-decoration: none;
  color: white;
}
    .btn-delete:hover {
      background-color: #c0392b;
    }

    /* ===== RESPONSIVE ===== */
    @media (max-width: 768px) {
      body {
        flex-direction: column;
      }

      .sidebar {
        width: 100%;
        border-radius: 0;
        flex-direction: row;
        justify-content: space-around;
      }

      .sidebar ul {
        display: flex;
        justify-content: space-around;
        width: 100%;
      }

      .main-content {
        padding: 20px;
      }

      header h1 {
        font-size: 1.4rem;
      }
    }
  </style>
</head>

<body>
  <div class="sidebar">
    <h2>ðŸ©º MediConnect</h2>
    <ul>
      <li><a href="/user/admin">Dashboard</a></li>
      <li class="active"><a href="/user/admin-doctor">Doctors</a></li>
      <li><a href="/user/admin-manage-api">Appointments</a></li>
      <li><a href="/user/admin-login">Logout</a></li>
    </ul>
  </div>

  <div class="main-content">
    <header>
      <h1>Manage Doctors</h1>
      <button class="btn-primary" ><a href='/user/ad-doctor'>+ Add Doctor</a></button>
    </header>

    <table class="styled-table">
      <thead>
        <tr>
          <th>ID</th>
          <th>Name</th>
          <th>Specialization</th>
          <th>Phone</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody id="doctorTableBody">
        <% doctors.forEach((doc)=>{%>
        <tr>
          <td><%= doc.d_id%></td>
          <td><%= doc.d_name%></td>
          <td><%= doc.d_specialization%></td>
          <td><%= doc.d_phone%></td>
          <td>
            <button class="btn-edit"><a href="/user/updateDoctor">Edit</a></button>
            <button class="btn-delete" onclick="DeleteDoctor('<%=doc.d_id%>');">Delete</a>
</button>
          </td>
        </tr>
        <%})%>
      </tbody>
    </table>
  </div>
  <script>
async function DeleteDoctor(id) {
  if (confirm("Are you sure you want to delete this doctor?")) {
    try {
      const res = await fetch(`/user/delete-doctor/${id}`, {
        method: 'DELETE'
      });

      if (res.ok) {
        alert("Doctor deleted successfully!");
        // Optionally remove row from table
        document.getElementById(`doctor-${id}`).remove();
      } else {
        alert("Failed to delete doctor.");
      }
    } catch (err) {
      console.error(err);
      alert("Error deleting doctor!");
    }
  }
}
</script>
</body>
</html>
